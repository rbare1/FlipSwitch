<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".MyActivity"
android:id="@+id/MyActivity"
    android:background="#ff4c4c4c">



    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView3"
        android:layout_marginBottom="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/preset1_icon" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:src="@drawable/preset2_icon" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton7"
                android:src="@drawable/preset3_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView2" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:src="@drawable/temp_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_toLeftOf="@+id/lockButton"
                android:layout_toStartOf="@+id/lockButton" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="250dp"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:text="Doors Locked"
            android:id="@+id/doorsLocked"
            android:layout_alignTop="@+id/tempText" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView8"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:layout_below="@+id/horizontalScrollView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/lockButton"
                android:src="@drawable/bathroom_light_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton

                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/tempButton"
                android:src="@drawable/living_room_light_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_toLeftOf="@+id/lockButton"
                android:layout_toStartOf="@+id/lockButton" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:id="@+id/lightButton"
                android:src="@drawable/kitchen_light_icon"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_alignBottom="@+id/horizontalScrollView8"
                android:layout_toLeftOf="@+id/tempButton"
                android:layout_toStartOf="@+id/tempButton" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:id="@+id/imageButton8"
                android:src="@drawable/bedroom_light_icon"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_alignBottom="@+id/horizontalScrollView8"
                android:layout_toLeftOf="@+id/tempButton"
                android:layout_toStartOf="@+id/tempButton" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView12"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="145dp"
        android:layout_marginBottom="85dp"
        android:layout_below="@+id/horizontalScrollView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/open_garage"
                android:src="@drawable/open_garage_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton

                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/tempButton2"
                android:src="@drawable/closed_garage_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_toLeftOf="@+id/lockButton"
                android:layout_toStartOf="@+id/lockButton" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:id="@+id/lightButton2"
                android:src="@drawable/lock_icon"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_alignBottom="@+id/horizontalScrollView8"
                android:layout_toLeftOf="@+id/tempButton"
                android:layout_toStartOf="@+id/tempButton" />
            <ImageButton
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:id="@+id/lightButton3"
                android:src="@drawable/temp_icon"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_alignBottom="@+id/horizontalScrollView8"
                android:layout_toLeftOf="@+id/tempButton"
                android:layout_toStartOf="@+id/tempButton" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Temp"
    android:textSize="30sp"
    android:textColor="#FFFFFF"
    android:id="@+id/tempText"
        android:layout_marginLeft="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/horizontalScrollView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/music_icon" />

</RelativeLayout>