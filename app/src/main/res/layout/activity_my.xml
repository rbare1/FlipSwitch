<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity"
    android:id="@+id/MyActivity"
    android:background="#ff4c4c4c">



    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView3"
        android:layout_marginBottom="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preset1_Button"
                android:src="@drawable/preset1_icon" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preset2_Button"
                android:src="@drawable/preset2_icon" />



            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preset3_Button"
                android:src="@drawable/preset3_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/presetSettings_Button"
                android:src="@drawable/preset_settings_icon" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView8"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:layout_below="@+id/horizontalScrollView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/button_BathroomLight"
                android:src="@drawable/bathroom_light_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton

                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/button_LivingRoomLight"
                android:src="@drawable/living_room_light_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_toLeftOf="@+id/button_BathroomLight"
                android:layout_toStartOf="@+id/button_BathroomLight" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:id="@+id/button_KitchenLight"
                android:src="@drawable/kitchen_light_icon"
                android:layout_toRightOf="@+id/imageButton2"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_alignBottom="@+id/horizontalScrollView8"
                android:layout_toLeftOf="@+id/button_LivingRoomLight"
                android:layout_toStartOf="@+id/button_LivingRoomLight" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:id="@+id/button_BedroomLight"
                android:src="@drawable/bedroom_light_icon"
                android:layout_toRightOf="@+id/imageButton2"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_alignBottom="@+id/horizontalScrollView8"
                android:layout_toLeftOf="@+id/button_LivingRoomLight"
                android:layout_toStartOf="@+id/button_LivingRoomLight" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView12"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="145dp"
        android:layout_marginBottom="85dp"
        android:layout_below="@+id/horizontalScrollView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/open_garage"
                android:src="@drawable/open_garage_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton

                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/tempButton2"
                android:src="@drawable/closed_garage_icon"
                android:layout_below="@+id/horizontalScrollView3"
                android:layout_toLeftOf="@+id/button_BathroomLight"
                android:layout_toStartOf="@+id/button_BathroomLight" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:id="@+id/lightButton2"
                android:src="@drawable/lock_icon"
                android:layout_toRightOf="@+id/imageButton2"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_alignBottom="@+id/horizontalScrollView8"
                android:layout_toLeftOf="@+id/button_LivingRoomLight"
                android:layout_toStartOf="@+id/button_LivingRoomLight" />
            <ImageButton
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:id="@+id/tempButton"
                android:src="@drawable/temp_icon"
                android:layout_toRightOf="@+id/imageButton2"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_alignBottom="@+id/horizontalScrollView8"
                android:layout_toLeftOf="@+id/button_LivingRoomLight"
                android:layout_toStartOf="@+id/button_LivingRoomLight" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:id="@+id/button_camera"
                android:src="@drawable/camera_icon"
                android:layout_toRightOf="@+id/imageButton2"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_alignBottom="@+id/horizontalScrollView8"
                android:layout_toLeftOf="@+id/button_LivingRoomLight"
                android:layout_toStartOf="@+id/button_LivingRoomLight" />

        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:id="@+id/button_audio"
        android:src="@drawable/music_icon"
        android:layout_toStartOf="@+id/button_stop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_stop"
        android:src="@drawable/audio_stop_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_audio"
        android:cropToPadding="false"
        android:focusableInTouchMode="false"
        android:longClickable="false" />

</RelativeLayout>